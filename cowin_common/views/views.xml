<odoo>
  <data>
      <!-- 审批需要的通用对话框 -->
    <record id="cowin_common_approval_flow_dialog_form" model="ir.ui.view">
        <field name="name">cowin_common.approval_flow_dialog form</field>
        <field name="model">cowin_common.approval_flow_dialog</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <group>
                    <!--<field name="approval_result"/>-->
                    <field name="approval_opinion"/>
                    <field name="is_put_off" attrs="{'invisible': True}"/>


                </group>


                <footer>
                    <button type="object" name="button_agree" string="同意"/>
                    <button type="object" name="button_reject" string="拒绝"/>
                    <button type="object" name="button_putoff" string="暂缓" attrs="{'invisible': [('is_put_off', '=', False)]}"/>
                    <!--<button type="object" name="button_putoff" string="暂缓"/>-->
                </footer>
            </form>
        </field>

    </record>




  </data>
</odoo>