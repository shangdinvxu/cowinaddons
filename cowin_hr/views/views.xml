<odoo>
  <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="cowin_hr.list">
      <field name="name">cowin_hr list</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">


          <xpath expr="//field[@name='work_phone']" position="after">
              <field name="backup_person"/>
              <field name="relation_to_me"/>
              <field name="identification_id_contract_person"/>
              <field name="mobile_phone_backup_contract_person"/>
          </xpath>
      </field>
    </record>

   <record model="ir.ui.view" id="cowin_hr.kanban">
      <field name="name">cowin_hr list</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
      <field name="arch" type="xml">

           <!-- find field description and add the field XXX after it -->
          <xpath expr="//div[@class='oe_kanban_global_click']" position="attributes">
              <attribute name="class">oe_kanban_global_click</attribute>
              <attribute name="id">kkkk</attribute>
          </xpath>
          <!-- find field description and add the field XXX after it -->
          <xpath expr="//li[@t-if='record.mobile_phone.raw_value']" position="after">
              <li t-if="record.backup_person.raw_value"> <field name="backup_person"/></li>
              <li t-if="record.relation_to_me.raw_value"> <field name="relation_to_me"/></li>
              <li t-if="record.identification_id_contract_person.raw_value"><field name="identification_id_contract_person"/></li>
              <li t-if="record.mobile_phone_backup_contract_person.raw_value"><field name="mobile_phone_backup_contract_person"/></li>
          </xpath>
      </field>
    </record>





    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cowin_hr.action_window">
      <field name="name">cowin_hr window</field>
      <field name="res_model">hr.employee</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="cowin_员工信息" id="cowin_hr.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cowin_hr.menu_1" parent="cowin_hr.menu_root"/>
    <menuitem name="Menu 2" id="cowin_hr.menu_2" parent="cowin_hr.menu_root"/>

    <!-- actions -->

    <menuitem name="员工列表" id="cowin_hr.menu_1_list" parent="cowin_hr.menu_1"
              action="cowin_hr.action_window"/>
    <!--<menuitem name="Server to list" id="cowin_hr" parent="cowin_hr.menu_2"-->
              <!--action="cowin_hr.action_server"/>-->


      <record id="view_new_employee" model="ir.ui.view">
            <field name="name">hr.employee.new_view</field>
            <field name="model">hr.employee</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <employee_view name="name" passport_id="passport_id" work_email="work_email" work_phone="work_phone" address_id="address_id"
                               gender="gender" image="image" identification_id="identification_id" string="Tasks">
                </employee_view>
            </field>
      </record>

      <record id="employee_view_action" model="ir.actions.act_window">
            <field name="name">员工</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">employee_view</field>
            <field name="context">{
                'group_by': 'user_id',
                }
            </field>
            <!--<field name="inherit_id" ref="product.product_normal_form_view"/>-->
      </record>

      <menuitem id="petstore_employee"
            name="员工"
            action="employee_view_action"
            parent="cowin_hr.menu_1"
            sequence="13"/>

  </data>
</odoo>