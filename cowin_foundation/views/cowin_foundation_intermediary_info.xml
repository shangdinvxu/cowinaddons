<odoo>
    <data>
        <!-- 中介机构情况 -->
        <record id="cowin_foundation_intermediary_info_form" model="ir.ui.view">
            <field name="name">cowin_foudation.intermediary_info form</field>
            <field name="model">cowin_foudation.intermediary_info</field>
            <field name="arch" type="xml">
              <form create="0" delete="0">
                  <sheet>
                      <group>
                        <field name="name" required="1"/>
                        <field name="trustee_bank_adress" required="1"/>
                        <field name="contract_person_for_trustee_bank" required="1"/>
                        <field name="contract_phone_for_trustee_bank" required="1"/>


                        <field name="auditing_offices" required="1"/>
                        <field name="auditing_offices_adress" required="1"/>
                        <field name="contract_person_for_auditing_offices" required="1"/>
                        <field name="contract_phone_for_auditing_offices" required="1"/>

                      </group>
                  </sheet>


                  <footer>
                        <button type="object" name="button_save" string="保存"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                  </footer>
              </form>
            </field>
        </record>


    </data>
</odoo>