<odoo>

    <data>

        <!--投前/投后投资决策委员会会议表决结果-->
        <record model="ir.ui.view" id="sub_prev_post_poll_status_list">
            <field name="name">cowin_project.sub_prev_post_poll_status list</field>
            <field name="model">cowin_project.sub_prev_post_poll_status</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="project_number"/>
                    <field name="foundation_id"/>
                    <field name="round_financing_id"/>
                    <field name="the_amount_of_investment"/>
                    <field name="ownership_interest"/>
                    <field name="the_amount_of_financing"/>
                    <field name="project_valuation"/>
                </tree>
            </field>
        </record>

        <!--投前/投后投资决策委员会会议表决结果的form视图-->
        <record model="ir.ui.view" id="sub_prev_post_poll_status_form_no_button">
            <field name="name">cowin_project.sub_prev_post_poll_status form</field>
            <field name="model">cowin_project.sub_prev_post_poll_status</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <field name="prev_or_post_vote" attrs="{'invisible': True}"/>
                            <!-- 投前统计  -->
                            <field name="prev_voting_statistics" readonly="1" attrs="{'invisible': [('prev_or_post_vote','=', False)]}"/>

                            <!--投后统计-->
                            <field name="post_voting_statistics" readonly="1" attrs="{'invisible': [('prev_or_post_vote','=', True)]}" widget="progressbar" />
                            <field name="voting_result" readonly="1"/>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>


    </data>


</odoo>