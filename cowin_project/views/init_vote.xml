<odoo>
    <data>


         <!-- 我的投票 -->
        <record model="ir.actions.act_window" id="sub_conference_resolutions_action_window">
            <field name="name">我的投票</field>
            <field name="res_model">cowin_project.prev_post_vote_poll</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('cowin_project_prev_post_vote_poll_list')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('cowin_project_prev_post_vote_poll_form')})]"/>
            <field name="view_mode">tree,form</field>
            <!--从odoo的代码中可以看出,代码使用的是python源代码的写法-->

            <field name="domain">[('vote_status', '=', 1)]</field>

            <field name="context">{'custom_filter': True}</field>
        </record>


         <record model="ir.actions.act_window" id="sub_conference_resolutions_action_window2">
            <field name="name">投票查询</field>
            <field name="res_model">cowin_project.prev_post_vote_poll</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('cowin_project_prev_post_vote_poll_list')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('cowin_project_prev_post_vote_poll_form2')})]"/>
            <field name="view_mode">tree,form</field>
            <!--从odoo的代码中可以看出,代码使用的是python源代码的写法-->
            <field name="domain">[('vote_status', '=', 2)]</field>
            <!--<field name="context">-->
                <!--{'vote_status': 2}-->
            <!--</field>-->
        </record>

        <record model="ir.actions.server" id="sub_conference_resolutions_action_server">
            <field name="name">poll_vote server</field>
            <field name="model_id" ref="model_cowin_project_prev_post_vote_poll"/>
            <field name="code">
                action = {
                  'name': 'dd',
                  "type": "ir.actions.act_window",
                  "view_mode": "form",
                  "res_model": model._name,
                  'views': [[False, 'list'], [False, 'form']],
                  'flags': {'form': {'initial_mode': 'edit'}},
                }
            </field>
        </record>


        <menuitem name="我的投票" id="cowin_project.menu_24" parent="cowin_project.menu_4"
                  action="sub_conference_resolutions_action_server"/>
                  <!--action="sub_conference_resolutions_action_window"/>-->

        <menuitem name="投票查询" id="cowin_project.menu_25" parent="cowin_project.menu_4"
                  action="sub_conference_resolutions_action_window2"/>

        <!--<menuitem name="投票查询_server" id="cowin_project.menu_26" parent="cowin_project.menu_4"-->
                  <!--action="sub_conference_resolutions_action_server"/>-->

    </data>


</odoo>