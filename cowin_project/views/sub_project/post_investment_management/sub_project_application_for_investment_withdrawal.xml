

<odoo>

    <data>
        <!-- 投资退出申请书-->


           <!--投资退出申请书的form视图-->
        <record model="ir.ui.view" id="sub_app_invest_withdrawal_form">
            <field name="name">cowin_project.sub_app_invest_withdrawal form</field>
            <field name="model">cowin_project.sub_app_invest_withdrawal</field>
            <field name="arch" type="xml">
                <form string="Fiscal year"  create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                 <field name="name" readonly="1"/>
                                <field name="reporter" readonly="1"/>
                                <field name="report_date" required="1"/>
                                <field name="trustee_id" required="1"/>
                                <field name="supervisor_id" required="1"/>
                                <field name="withdrawal_amount" required="1" />
                                <field name="withdrawal_ratio" required="1"/>
                                <field name="decision_file_list" widget="many2many_binary" required="1"/>
                                <field name="exit_plan" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" readonly="1"/>
                                <field name="ownership_interest" readonly="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" readonly="1"/>
                                <field name="project_valuation" readonly="1"/>
                                <!---->
                            </group>

                            <group>
                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                    <tree >
                                        <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                        <field name="approval_role_id" readonly="1"/>
                                        <field name="approval_result" readonly="1"/>
                                        <field name="approval_opinion" readonly="1"/>
                                    </tree>

                                </field>

                            </group>

                            <group>
                                <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sub_app_invest_withdrawal_form_no_button">
            <field name="name">cowin_project.sub_app_invest_withdrawal form</field>
            <field name="model">cowin_project.sub_app_invest_withdrawal</field>
            <field name="arch" type="xml">
                <form string="Fiscal year"  create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                 <field name="name" readonly="1"/>
                                <field name="reporter" readonly="1"/>
                                <field name="report_date" required="1"/>
                                <field name="trustee_id" required="1"/>
                                <field name="supervisor_id" required="1"/>
                                <field name="withdrawal_amount" required="1"/>
                                <field name="withdrawal_ratio" required="1"/>
                                <field name="decision_file_list" widget="many2many_binary" required="1"/>
                                <field name="exit_plan" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" readonly="1"/>
                                <field name="ownership_interest" readonly="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" readonly="1"/>
                                <field name="project_valuation" readonly="1"/>
                                <!---->
                            </group>
                        </group>
                        <group>
                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1" >
                                    <tree >
                                        <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                        <field name="approval_role_id" readonly="1"/>
                                        <field name="approval_result" readonly="1"/>
                                        <field name="approval_opinion" readonly="1"/>
                                    </tree>

                                </field>

                            </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>