<odoo>

    <data>


        <!-- 投资合同-->


           <!--投资合同的form视图-->
        <record model="ir.ui.view" id="sub_invest_contract_form">
            <field name="name">cowin_project.sub_invest_contract form</field>
            <field name="model">cowin_project.sub_invest_contract</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>

                            <field name="contract_no" required="1"/>
                            <field name="title" required="1"/>
                            <field name="main_contents" required="1"/>
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>


                        <group>
                            <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="sub_invest_contract_form_no_button">
            <field name="name">cowin_project.sub_invest_contract form</field>
            <field name="model">cowin_project.sub_invest_contract</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>

                            <field name="contract_no" required="1"/>
                            <field name="title" required="1"/>
                            <field name="main_contents" required="1"/>
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>

                    </sheet>
                </form>
            </field>
        </record>



    </data>
</odoo>