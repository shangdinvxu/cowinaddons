<odoo>

    <data>

        <!-- 付款申请表-->


           <!--付款申请表的form视图-->
        <record model="ir.ui.view" id="sub_payment_app_form_form">
            <field name="name">cowin_project.sub_payment_app_form form</field>
            <field name="model">cowin_project.sub_payment_app_form</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                         <button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_number" readonly="1"/>
                                <!--<field name="invest_manager_id" readonly="1"/>-->
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="date_of_application" readonly="1"/>
                                <field name="list_of_examination_and_approval_documents" widget="many2many_binary" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" readonly="1"/>
                                <field name="ownership_interest" readonly="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" readonly="1"/>
                                <!---->
                                <field name="payment_account" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="monetary_unit" required="1"/>
                            <field name="the_payment_amount" required="1"/>
                            <field name="total_investment" readonly="1"/>
                            <field name="number_of_periods" required="1"/>
                            <field name="accumulated_payment_amount" readonly="1"/>
                            <field name="payment_amount" readonly="1"/>
                            <field name="payee_name" required="1"/>
                            <field name="account_number" required="1"/>
                            <field name="bank_of_deposit" required="1"/>
                            <field name="funds_provided" required="1"/>
                        </group>


                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>
                        <group>
                            <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="sub_payment_app_form_form_no_button">
            <field name="name">cowin_project.sub_payment_app_form form</field>
            <field name="model">cowin_project.sub_payment_app_form</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_number" readonly="1"/>
                                <!--<field name="invest_manager_id" readonly="1"/>-->
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="date_of_application" readonly="1"/>
                                <field name="list_of_examination_and_approval_documents" widget="many2many_binary" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" readonly="1"/>
                                <field name="ownership_interest" readonly="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" readonly="1"/>
                                <!---->
                                <field name="payment_account" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="monetary_unit" required="1"/>
                            <field name="the_payment_amount" required="1"/>
                            <field name="total_investment" readonly="1"/>
                            <field name="number_of_periods" required="1"/>
                            <field name="accumulated_payment_amount" readonly="1"/>
                            <field name="payment_amount" readonly="1"/>
                            <field name="payee_name" required="1"/>
                            <field name="account_number" required="1"/>
                            <field name="bank_of_deposit" required="1"/>
                            <field name="funds_provided" required="1"/>
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>