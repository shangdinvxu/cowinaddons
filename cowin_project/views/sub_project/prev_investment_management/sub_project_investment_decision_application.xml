<odoo>
    <data>


        <!-- 投资决策申请-->
        <!--投资决策申请的form视图-->
        <record model="ir.ui.view" id="sub_invest_decision_app_form">
            <field name="name">cowin_project.sub_invest_decision_app form</field>
            <field name="model">cowin_project.sub_invest_decision_app</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_number" readonly="1"/>
                                <field name="date_of_review" readonly="1"/>
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="company_investment_role" required="1"/>
                                <field name="decision_file_list" widget="many2many_binary" required="1"/>
                                <field name="investment_decision_Committee_held_time" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" string="本次投资金额(万元)" required="1"/>
                                <field name="ownership_interest" widget="custome_fieldprogressBar" required="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" string="本次融资金额(万元)" required="1"/>
                                <field name="project_valuation" string="估值(万元)" required="1"/>
                                <!---->
                            </group>

                            <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" options='{"no_open":True}' readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>


                            <group>
                                <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


         <record model="ir.ui.view" id="sub_invest_decision_app_form_no_button">
            <field name="name">cowin_project.sub_invest_decision_app form</field>
            <field name="model">cowin_project.sub_invest_decision_app</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="project_number" readonly="1"/>
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="date_of_review" readonly="1"/>
                                <field name="company_investment_role" required="1"/>
                                <field name="decision_file_list" widget="many2many_binary" required="1"/>
                                <field name="investment_decision_Committee_held_time" required="1"/>
                            </group>
                            <group>
                                <!--投资基金-->
                                <field name="foundation_id" readonly="1"/>
                                <field name="the_amount_of_investment" string="本次投资金额(万元)" required="1"/>
                                <field name="ownership_interest" widget="custome_fieldprogressBar" required="1"/>
                                <field name="round_financing_id" readonly="1"/>
                                <field name="the_amount_of_financing" string="本次融资金额(万元)" required="1"/>
                                <field name="project_valuation" string="估值(万元)" required="1"/>
                                <!---->
                            </group>
                        </group>
                        <group>
                            <field name="sub_pro_approval_flow_settings_record_ids" options='{"no_open":True}' readonly="1">
                                   <tree >
                                     <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                     <field name="approval_role_id" readonly="1"/>
                                     <field name="approval_result" readonly="1"/>
                                     <field name="approval_opinion" readonly="1"/>
                                   </tree>
                               </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



    </data>
</odoo>