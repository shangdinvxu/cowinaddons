<odoo>
    <data>
        <!-- 立项意见书-->


           <!--立项意见书的form视图-->
        <record model="ir.ui.view" id="sub_opinion_book_form">
            <field name="name">cowin_project.sub_opinion_book form</field>
            <field name="model">cowin_project.sub_opinion_book</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>

                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <field name="invest_manager_ids" readonly="1"/>
                            <!--<field name="invest_manager_id" readonly="1"/>-->
                            <field name="date_of_project" readonly="1"/>
                            <!--投资基金-->
                            <field name="foundation_id" required="1" options='{"no_open":True}'/>
                            <field name="the_amount_of_investment" required="1"/>
                            <field name="ownership_interest" required="1"/>
                            <field name="round_financing_id" required="1" options='{"no_open":True}'/>
                            <field name="the_amount_of_financing" required="1"/>
                            <!---->
                            <field name="project_mumbers" readonly="1"/>
                            <!--<field name="partner_opinion"/>-->
                            <!--<field name="business_director_option"/>-->
                            <!--<field name="policy_making_committee"/>-->
                        </group>


                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>
                        <group>
                            <button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="sub_opinion_book_form_no_button">
            <field name="name">cowin_project.sub_opinion_book form</field>
            <field name="model">cowin_project.sub_opinion_book</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>

                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <field name="invest_manager_ids" readonly="1"/>
                            <!--<field name="invest_manager_id" readonly="1"/>-->
                            <field name="date_of_project" readonly="1"/>
                            <!--投资基金-->
                            <field name="foundation_id" required="1" options='{"no_open":True}'/>
                            <field name="the_amount_of_investment" required="1"/>
                            <field name="ownership_interest" required="1"/>
                            <field name="round_financing_id" required="1" options='{"no_open":True}'/>
                            <field name="the_amount_of_financing" required="1"/>
                            <!---->
                            <field name="project_mumbers" readonly="1"/>
                            <!--<field name="partner_opinion"/>-->
                            <!--<field name="business_director_option"/>-->
                            <!--<field name="policy_making_committee"/>-->
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>