<!--# 项目立项  构建小项目-->
<odoo>
    <data>
         <!--项目立项的form视图-->
        <record model="ir.ui.view" id="cowin_subproject_form">
            <field name="name">cowin_project.cowin_subproject form</field>
            <field name="model">cowin_project.cowin_subproject</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55, 66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                                <field name="project_number" required="1"/>
                                <field name="project_source" required="1" options='{"no_open":True}'/>
                                <field name="project_source_note" required="1"/>
                                <!--<field name="sub_approval_flow_settings_approval_flow_count" attrs="{'invisible': 1}"/>-->
                                <!--<field name="invest_manager_id" required="1"/>-->
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="project_company_profile" required="1"/>
                                <field name="project_appraisal" required="1"/>
                                <field name="project_note"/>
                                <field name="industry" required="1"/>
                                <field name="stage" required="1"/>
                                <field name="production" required="1"/>
                                <field name="registered_address" required="1"/>
                                <field name="peration_place" required="1"/>
                                <field name="founding_time" required="1"/>
                                <field name="contract_person" required="1"/>
                                <field name="contract_phone" required="1"/>
                                <field name="contract_email" required="1"/>
                                <field name="attachment_ids"  widget="many2many_binary"/>
                                <field name="attachment_note"/>
                            </group>


                            <group>
                                 <!--投资基金-->
                                <field name="foundation_id" required="1" options='{"no_open":True}'/>
                                <field name="the_amount_of_investment" required="1"/>
                                <field name="ownership_interest" required="1"/>
                                <field name="round_financing_id" required="1" options='{"no_open":True}'/>
                                <field name="the_amount_of_financing" required="1"/>
                                <field name="project_valuation" required="1"/>
                                <!---->
                            </group>

                        </group>
                        <group>
                            <field name="sub_pro_approval_flow_settings_record_ids" >
                                <tree >
                                    <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                    <field name="approval_role_id" readonly="1"/>
                                    <field name="approval_result" readonly="1"/>
                                    <field name="approval_opinion" readonly="1"/>
                                </tree>

                            </field>

                        </group>

                        <!--<group>-->
                            <!--&lt;!&ndash;<button type="object" name="button_approval_flow_info" context="{'sub_approval_flow_settings_approval_flow_count': sub_approval_flow_settings_approval_flow_count}" args="[55, 66, 77]"  string="审核"/>&ndash;&gt;-->
                            <!--<button type="object" name="button_approval_flow_info"  args="[55, 66, 77]"  string="审核"/>-->
                        <!--</group>-->

                    </sheet>

                </form>
            </field>
        </record>



          <!--项目立项的form视图-->
        <record model="ir.ui.view" id="cowin_subproject_form_no_button">
            <field name="name">cowin_project.cowin_subproject form</field>
            <field name="model">cowin_project.cowin_subproject</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                                <field name="project_number" required="1"/>
                                <field name="project_source" required="1" options='{"no_open":True}'/>
                                <field name="project_source_note" required="1"/>
                                <!--<field name="invest_manager_id" required="1"/>-->
                                <field name="invest_manager_ids" readonly="1"/>
                                <field name="project_company_profile" required="1"/>
                                <field name="project_appraisal" required="1"/>
                                <field name="project_note"/>
                                <field name="industry" required="1"/>
                                <field name="stage" required="1"/>
                                <field name="production" required="1"/>
                                <field name="registered_address" required="1"/>
                                <field name="peration_place" required="1"/>
                                <field name="founding_time" required="1"/>
                                <field name="contract_person" required="1"/>
                                <field name="contract_phone" required="1"/>
                                <field name="contract_email" required="1"/>
                                <field name="attachment_ids"  widget="many2many_binary"/>
                                <field name="attachment_note"/>
                            </group>


                            <group>
                                 <!--投资基金-->
                                <field name="foundation_id" required="1" options='{"no_open":True}'/>
                                <field name="the_amount_of_investment" required="1"/>
                                <field name="ownership_interest" required="1"/>
                                <field name="round_financing_id" required="1" options='{"no_open":True}'/>
                                <field name="the_amount_of_financing" required="1"/>
                                <field name="project_valuation" required="1"/>
                                <!---->
                            </group>
                        </group>
                        <group>
                            <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                <tree >
                                    <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                    <field name="approval_role_id" readonly="1"/>
                                    <field name="approval_result" readonly="1"/>
                                    <field name="approval_opinion" readonly="1"/>
                                </tree>

                            </field>

                        </group>
                    </sheet>

                </form>
            </field>
        </record>

    </data>
</odoo>