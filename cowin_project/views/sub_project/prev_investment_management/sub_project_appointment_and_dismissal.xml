<odoo>
    <data>

        <!--  董事／监事任免书-->


           <!-- 董事／监事任免书的form视图-->
        <record model="ir.ui.view" id="sub_appointment_and_dismissal_form">
            <field name="name">cowin_project.sub_appointment_and_dismissal form</field>
            <field name="model">cowin_project.sub_appointment_and_dismissal</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <field name="invest_manager_ids" readonly="1"/>
                        </group>

                        <group>
                            <field name="trustee_id" required="1"/>
                            <field name="appointment_time_begin_trustee" required="1"/>
                            <field name="appointment_time_end_trustee" required="1"/>
                            <field name="Tenure_trustee" required="1"/>
                        </group>

                        <group>
                            <field name="supervisor_id" required="1"/>
                            <field name="appointment_time_begin_supervisor" required="1"/>
                            <field name="appointment_time_endr_supervisor" required="1"/>
                            <field name="Tenure_supervisor" required="1"/>
                        </group>
                        <group>
                          <field name="managing_partner_ids" readonly="1"/>
                        </group>


                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" options='{"no_open":True}' readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>


                        <group>
                            <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sub_appointment_and_dismissal_form_no_button">
            <field name="name">cowin_project.sub_appointment_and_dismissal form</field>
            <field name="model">cowin_project.sub_appointment_and_dismissal</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <field name="invest_manager_ids" readonly="1"/>
                        </group>

                        <group>
                            <field name="trustee_id" required="1"/>
                            <field name="appointment_time_begin_trustee" required="1"/>
                            <field name="appointment_time_end_trustee" required="1"/>
                            <field name="Tenure_trustee" required="1"/>
                        </group>

                        <group>
                            <field name="supervisor_id" required="1"/>
                            <field name="appointment_time_begin_supervisor" required="1"/>
                            <field name="appointment_time_endr_supervisor" required="1"/>
                            <field name="Tenure_supervisor" required="1"/>
                        </group>
                        <group>
                          <field name="managing_partner_ids" readonly="1"/>
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" options='{"no_open":True}' readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>

                    </sheet>
                </form>
            </field>
        </record>





    </data>
</odoo>