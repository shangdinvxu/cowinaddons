<odoo>
    <data>


         <!-- 投资决策委员会会议决议-->


           <!--投资决策委员会会议决议的form视图-->
        <record model="ir.ui.view" id="sub_invest_decision_committee_res_form">
            <field name="name">cowin_project.sub_invest_decision_committee_res form</field>
            <field name="model">cowin_project.sub_invest_decision_committee_res</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <header>
                        <button class="review" type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核" style="background-color:#00B0DD;border-color:#00B0DD;"/>
                    </header>
                    <sheet>
                        <group>

                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <!--<field name="invest_manager_id" readonly="1"/>-->
                            <field name="invest_manager_ids" readonly="1"/>

                            <field name="prev_voting_date" readonly="1"/>
                            <field name="prev_voting_result" readonly="1"/>
                            <!--投资基金-->
                            <field name="foundation_id" readonly="1"/>
                            <field name="the_amount_of_investment" required="1"/>
                            <field name="ownership_interest" required="1"/>
                            <field name="round_financing_id" readonly="1"/>
                            <field name="the_amount_of_financing" required="1"/>
                            <field name="project_valuation" required="1"/>
                            <!---->

                            <field name="trustee_id" required="1"/>
                            <field name="supervisor_id" required="1"/>
                            <field name="amount_of_entrusted_loan" required="1"/>
                            <field name="chairman_of_investment_decision_committee_ids" readonly="1"/>

                            <!-- 是否是最终决议!!! -->
                            <field name="is_final_meeting_resolution"/>



                        </group>
                       <group>
                            <!--<button type="object" name="button_approval_flow_info"  args="[55 ,66, 77]"  string="审核"/>-->
                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>

                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="sub_invest_decision_committee_res_form_no_button">
            <field name="name">cowin_project.sub_invest_decision_committee_res form</field>
            <field name="model">cowin_project.sub_invest_decision_committee_res</field>
            <field name="arch" type="xml">
                <form string="Fiscal year" create="false" edit="false" delete="false">
                    <sheet>
                        <group>

                            <field name="name" readonly="1"/>
                            <field name="project_number" readonly="1"/>
                            <!--<field name="invest_manager_id" readonly="1"/>-->
                            <field name="invest_manager_ids" readonly="1"/>

                            <field name="prev_voting_date" readonly="1"/>
                            <field name="prev_voting_result" readonly="1"/>
                            <!--投资基金-->
                            <field name="foundation_id" readonly="1"/>
                            <field name="the_amount_of_investment" required="1"/>
                            <field name="ownership_interest" required="1"/>
                            <field name="round_financing_id" readonly="1"/>
                            <field name="the_amount_of_financing" required="1"/>
                            <field name="project_valuation" required="1"/>
                            <!---->

                            <field name="trustee_id" required="1"/>
                            <field name="supervisor_id" required="1"/>
                            <field name="amount_of_entrusted_loan" required="1"/>
                            <field name="chairman_of_investment_decision_committee_ids" readonly="1"/>

                            <!-- 是否是最终决议!!! -->
                            <field name="is_final_meeting_resolution"/>


                        </group>

                        <group>

                                <field name="sub_pro_approval_flow_settings_record_ids" readonly="1">
                                       <tree >
                                         <field name="approval_person_id" readonly="1" options='{"no_open":True}'/>
                                         <field name="approval_role_id" readonly="1"/>
                                         <field name="approval_result" readonly="1"/>
                                         <field name="approval_opinion" readonly="1"/>
                                       </tree>
                                   </field>
                            </group>


                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>