            <field name="context">
                {'prev_or_post_investment':(1,1)}
            </field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (4, 0, {'view_mode': 'kanban', 'view_id': ref('project_process_kanban_view')}),
                          (4, 0, {'view_mode': 'list', 'view_id': ref('project_tree_view')})]"/>
